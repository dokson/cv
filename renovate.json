{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "github-actions": {
        "enabled": true
    },
    "packageRules": [
        {
            "matchManagers": [
                "github-actions"
            ],
            "groupName": "github-actions"
        },
        {
            "matchManagers": [
                "regex"
            ],
            "matchDatasources": [
                "custom.ctan"
            ],
            "groupName": "latex-packages",
            "commitMessageTopic": "LaTeX package {{depName}}",
            "commitMessageExtra": "to version {{newVersion}}"
        }
    ],
    "customDatasources": {
        "ctan": {
            "defaultRegistryUrlTemplate": "https://ctan.org/json/2.0/pkg/{{packageName}}",
            "format": "json",
            "transformTemplates": [
                "{\"releases\": $exists(version) ? [{\"version\": version.number ? version.number : version.date}] : []}"
            ]
        }
    },
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": [
                "\\.cls$"
            ],
            "matchStrings": [
                "% renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+) currentValue=(?<currentValue>\\S+)\\s+\\\\(?:usepackage|RequirePackage)(?:\\[[^\\]]*\\])?\\{(?<packageName>[^}]+)\\}"
            ],
            "datasourceTemplate": "custom.ctan",
            "versioningTemplate": "loose"
        }
    ]
}