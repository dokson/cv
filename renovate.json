{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "github-actions": {
        "enabled": true
    },
    "packageRules": [
        {
            "matchManagers": [
                "github-actions"
            ],
            "groupName": "github-actions"
        }
    ],
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": [
                "\\.cls$"
            ],
            "matchStrings": [
                "% renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)\\s+\\\\(?:usepackage|RequirePackage)(?:\\[[^\\]]*\\])?\\{(?<packageName>[^}]+)\\}"
            ],
            "datasourceTemplate": "repology",
            "depNameTemplate": "ctan/{{depName}}",
            "versioningTemplate": "loose",
            "currentValueTemplate": "0.0.0"
        }
    ]
}