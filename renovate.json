{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "github-actions": {
        "enabled": true
    },
    "packageRules": [
        {
            "matchManagers": [
                "github-actions"
            ],
            "groupName": "github-actions"
        }
    ],
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": [
                "(^|/)[^/]*\\.tex$",
                "(^|/)[^/]*\\.cls$"
            ],
            "matchStrings": [
                "%[ \\t]*renovate:[ \\t]*datasource=(?<datasource>[^\\s]+)[ \\t]+depName=(?<depName>[^\\s]+)(?:[ \\t]+versioning=(?<versioning>[^\\s]+))?[ \\t]*[\\r\\n]+(?:\\\\usepackage|\\\\RequirePackage)(?:\\[.*?\\])?\\{(?<packageName>.*?)\\}(?:[ \\t]*%[ \\t]*(?<currentValue>[^\\r\\n]*))?"
            ],
            "packageNameTemplate": "{{{packageName}}}",
            "datasourceTemplate": "{{{datasource}}}",
            "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}",
            "currentValueTemplate": "{{#if currentValue}}{{{currentValue}}}{{else}}0.0.0{{/if}}"
        }
    ]
}